<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eventors.ADMIN.LoginAdmin"
             Title="Log In"
             BackgroundImageSource="wallpaper">
    <ContentPage.Content>
        <StackLayout Padding="24" Spacing="24">
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Admin Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout Orientation="Horizontal" Spacing="0">
                <Image Source="username" WidthRequest="40" HeightRequest="50"/>


                <Entry PlaceholderColor="white" Placeholder="Enter Your Gmail" x:Name="txtEmail"  HorizontalOptions="FillAndExpand" Keyboard="Email" ReturnType="Next"  />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="0">
                <Image Source="Pass" WidthRequest="40" HeightRequest="50"/>

                <Entry IsPassword="True" PlaceholderColor="white" Placeholder="Enter Your Password" x:Name="txtPassword" HorizontalOptions="FillAndExpand" ReturnType="Done" />
            </StackLayout>

            <Button  CornerRadius="20" Text="Login" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>